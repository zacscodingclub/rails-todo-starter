<h1>Edit your ToDo</h1>
<% if @listing.errors.any? %>
  <h2>There was an error in your submission.</h2>
  <ul>
    <% @listing.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @listing do |f| %>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Update ToDo" %>
  </p>
<% end %>